<h1>Create Movie</h1>
<form action="/movies" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label>Title:</label>
		<input type="text" name="movie[title]" class="form-control">
	</div>
	<div class="form-group">
		<label>Duration:</label>
		<input type="text" name="movie[duration]" class="form-control">
	</div>
	<div class="form-group">
		<label>Rating:</label>
		<input type="text" name="movie[rating]" class="form-control">
	</div>
	<div class="form-group">
		<label>Release Date:</label>
		<input type="text" name="movie[release_date]" placeholder="YYYY-MM-DD" class="form-control">
	</div>
	<input type="submit" value="Create" class="btn btn-primary">
</form>
<br />
<% if flash[:errors] %> 
	<% flash[:errors].each do |e| %>
	<div class="alert alert-info"><%= e %></div>
	<% end %>
<% end %>