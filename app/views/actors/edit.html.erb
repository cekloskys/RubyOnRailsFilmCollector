<h1>Edit <%= @actor.first_name %> <%= @actor.last_name %></h1>
<form action="/actors/<%= @actor.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label>First Name:</label>
		<input type="text" name="actor[first_name]" value="<%= @actor.first_name %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Last Name:</label>
		<input type="text" name="actor[last_name]" value="<%= @actor.last_name %>" class="form-control">
	</div>
	<input type="submit" value="Update" class="btn btn-primary">
</form>
<!-- <a href="/actors">View Actors</a> -->
<br />
<% if flash[:errors] %> 
	<% flash[:errors].each do |e| %>
	<div class="alert alert-info"><%= e %></div>
	<% end %>
<% end %>